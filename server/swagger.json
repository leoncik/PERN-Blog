{
    "openapi": "3.0.0",
    "info": {
        "title": "Scribissimus API",
        "description": "An Express API for my PERN-Blog project.",
        "version": "1.0.0"
    },
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Login user.",
                "parameters": [
                    {
                        "name": "Credentials",
                        "in": "body",
                        "description": "User's credentials",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully logged in",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/profile": {
            "get": {
                "tags": ["User"],
                "description": "Get user's profile.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully fetched user profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "username": {
                                            "type": "string"
                                        },
                                        "avatar": {
                                            "type": "string"
                                        },
                                        "registered_date": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/profile/username": {
            "put": {
                "tags": ["User"],
                "description": "Edit user's username.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Username",
                        "in": "body",
                        "description": "New username",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "username": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully edited user's username",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "username": {
                                            "type": "string"
                                        },
                                        "avatar": {
                                            "type": "string"
                                        },
                                        "registered_date": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/profile/upload": {
            "post": {
                "tags": ["User"],
                "description": "Upload user's avatar.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully added user's avatar"
                    }
                }
            }
        },
        "/users": {
            "delete": {
                "tags": ["User"],
                "description": "Delete user.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully deleted user."
                    }
                }
            }
        },

        "/posts": {
            "get": {
                "tags": ["Blog posts"],
                "description": "Get all blog posts of connected user.",
                "responses": {
                    "200": {
                        "description": "Successfully fetched all blog posts connected user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "number"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "content": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Blog posts"
                ],
                "description": "Add a blog post.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Post content",
                        "in": "body",
                        "description": "New post content",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "content": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully added blog post"
                    }
                }
            }
        },
        "/posts/{postId}": {
            "put": {
                "tags": [
                    "Blog posts"
                ],
                "description": "Edit a blog post of connected user.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "in": "header",
                        "name": "postId",
                        "description": "Id of the blog post that will be edited.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Post content",
                        "in": "body",
                        "description": "Edited post content",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "content":  {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully edited blog post.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "number"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "content": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Blog posts"
                ],
                "description": "Delete a blog post.",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "JWT token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "in": "header",
                        "name": "postId",
                        "description": "Id of the blog post that will be deleted.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully deleted blog post"
                    }
                }
            }
        }
    }
}
